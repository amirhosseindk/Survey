@model List<WebApp.Models.Answer>

@{
    ViewData["Title"] = "Results";
}

<h1>
    نتایج پرسشنامه</ه1>

    <div>
        <h2>
            سوالات و پاسخ‌ها:</ه2>
            <ul>
                @foreach (var answer in Model)
                {
                    if (answer.AnswerOptionId == null)
                    {
                        <li>سوال @answer.QuestionId: @answer.AnswerText</li>
                    }
                    else
                    {
                        <li>سوال @answer.QuestionId: @answer.AnswerOptionId.ToString()</li>
                    }
                }
            </ul>
    </div>

    <a asp-controller="StatisticalAnalysis" asp-action="CompareWithCollegeAverage" asp-route-questionnaireId="@Model.First().QuestionnaireId" class="btn btn-primary">Compare With College Average</a>