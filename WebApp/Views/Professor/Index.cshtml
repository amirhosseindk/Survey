@model IEnumerable<WebApp.Models.Questionnaire>

@{
    ViewData["Title"] = "Professor Home";
}

<h1>Create a Course</h1>

<form asp-action="CreateCourse" method="post">
    <div class="form-group">
        <label for="courseName">Course Name</label>
        <input type="text" id="courseName" name="courseName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="className">Class Name</label>
        <input type="text" id="className" name="className" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Create Course</button>
</form>

<h2>Create a Questionnaire</h2>
<a asp-controller="Professor" asp-action="CreateQuestionnaire" class="btn btn-primary">Create Questionnaire</a>

<h2>Questionnaires</h2>
<form id="paired-t-test-form" asp-controller="StatisticalAnalysis" asp-action="PairedTTest" method="post">
    <ul>
        @foreach (var questionnaire in Model)
        {
            <li>
                <input type="checkbox" name="questionnaireIds" value="@questionnaire.Id" />
                <a asp-controller="Questionnaire" asp-action="Results" asp-route-id="@questionnaire.Id">@questionnaire.Title</a>
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Paired T-Test</button>
</form>

<form id="group-means-form" asp-controller="StatisticalAnalysis" asp-action="CalculateGroupMeans" method="post">
    <ul>
        @foreach (var questionnaire in Model)
        {
            <li>
                <input type="checkbox" name="questionnaireIds" value="@questionnaire.Id" />
                <a asp-controller="Questionnaire" asp-action="Results" asp-route-id="@questionnaire.Id">@questionnaire.Title</a>
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Calculate Group Means</button>
</form>

<form id="anova-form" asp-controller="StatisticalAnalysis" asp-action="PerformANOVA" method="post">
    <ul>
        @foreach (var questionnaire in Model)
        {
            <li>
                <input type="checkbox" name="questionnaireIds" value="@questionnaire.Id" />
                <a asp-controller="Questionnaire" asp-action="Results" asp-route-id="@questionnaire.Id">@questionnaire.Title</a>
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Perform ANOVA</button>
</form>

<form id="repeated-measures-form" asp-controller="StatisticalAnalysis" asp-action="PerformRepeatedMeasuresANOVA" method="post">
    <ul>
        @foreach (var questionnaire in Model)
        {
            <li>
                <input type="checkbox" name="questionnaireIds" value="@questionnaire.Id" />
                <a asp-controller="Questionnaire" asp-action="Results" asp-route-id="@questionnaire.Id">@questionnaire.Title</a>
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Perform Repeated Measures ANOVA</button>
</form>

<script>
    document.getElementById('paired-t-test-form').addEventListener('submit', function (event) {
        var checkboxes = document.querySelectorAll('#paired-t-test-form input[name="questionnaireIds"]:checked');
        if (checkboxes.length !== 2) {
            event.preventDefault();
            alert('Please select exactly two questionnaires.');
        }
    });

    document.getElementById('group-means-form').addEventListener('submit', function (event) {
        var checkboxes = document.querySelectorAll('#group-means-form input[name="questionnaireIds"]:checked');
        if (checkboxes.length !== 2) {
            event.preventDefault();
            alert('Please select exactly two questionnaires.');
        }
    });

    document.getElementById('anova-form').addEventListener('submit', function (event) {
        var checkboxes = document.querySelectorAll('#anova-form input[name="questionnaireIds"]:checked');
        if (checkboxes.length < 3) {
            event.preventDefault();
            alert('Please select at least three questionnaires.');
        }
    });

    document.getElementById('repeated-measures-form').addEventListener('submit', function (event) {
        var checkboxes = document.querySelectorAll('#repeated-measures-form input[name="questionnaireIds"]:checked');
        if (checkboxes.length < 3) {
            event.preventDefault();
            alert('Please select at least three questionnaires.');
        }
    });
</script>