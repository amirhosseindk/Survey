@model WebApp.ViewModels.RegisterViewModel

<h2>Register</h2>

<form asp-action="Register">
    <div class="form-group">
        <label asp-for="StudentNumber"></label>
        <input asp-for="StudentNumber" class="form-control" />
        <span asp-validation-for="StudentNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Field"></label>
        <input asp-for="Field" class="form-control" />
        <span asp-validation-for="Field" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCourseIds">Courses</label>
        <select asp-for="SelectedCourseIds" asp-items="@(new SelectList(Model.Courses, "Id", "Name"))" class="form-control" multiple="multiple">
        </select>
        <span asp-validation-for="SelectedCourseIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IsProfessor" />
        <label asp-for="IsProfessor">Are you a professor?</label>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}