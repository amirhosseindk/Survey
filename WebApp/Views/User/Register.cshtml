@model WebApp.ViewModels.RegisterViewModel

<h2>Register</h2>

<form asp-action="Register">
    <div class="form-group">
        <label asp-for="StudentNumber"></label>
        <input asp-for="StudentNumber" class="form-control" />
        <span asp-validation-for="StudentNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Field"></label>
        <input asp-for="Field" class="form-control" />
        <span asp-validation-for="Field" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" />
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lesson"></label>
        <input asp-for="Lesson" class="form-control" />
        <span asp-validation-for="Lesson" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IsProfessor" />
        <label asp-for="IsProfessor">Are you a professor?</label>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
