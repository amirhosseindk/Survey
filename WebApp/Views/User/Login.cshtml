@model WebApp.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="auth-form">
    <h2 class="auth-title">ورود</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="StudentNumber"></label>
            <input asp-for="StudentNumber" class="form-control" placeholder="شماره دانشجویی" />
            <span asp-validation-for="StudentNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">ورود</button>
        <div class="text-left mt-2">
            <a href="/User/Register">ثبت نام</a>
        </div>
    </form>
</div>